{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*.d.ts"],
  "exclude": ["node_modules/*", "src/**/*.js", "src/**/*.test.js"],
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "types": ["svelte"]
  }
}
